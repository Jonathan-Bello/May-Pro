---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  imgBg: ImageMetadata;
  imgProduct: ImageMetadata;
  href: string;
  selected?: boolean;
}

const { imgBg, title, imgProduct, href, selected } = Astro.props;
---

<a href={href} class="relative flex items-center justify-end">
  <div
    class:list={[
      `w-full h-36 sm:h-40 lg:h-44 absolute bottom-0 rounded overflow-hidden
    after:content-[''] after:inline-block after:absolute after:inset-0
    after:bg-gradient-to-b after:from-transparent after:to-[#222222] after:w-full after:h-full after:bg-opacity-80 after:z-10`,
      {
        "after:bg-primary-1 after:bg-opacity-100 after:to-primary-1 after:mix-blend-multiply":
          selected,
      },
    ]}
  >
    <Image class="w-full h-full object-cover" src={imgBg} alt="background" />
  </div>
  <h3
    class="absolute left-4 bottom-4 font-title text-xl sm:text-2xl lg:text-3xl font-medium text-grey-6 max-w-[75%] z-10"
  >
    {title}
  </h3>
  <Image
    class:list={["z-10 w-24 md:w-28 lg:w-24 xl:w-32 my-12 lg:my-20 xl:my-12 mr-4 lg:mr-2", {"scale-110": selected}]}
    src={imgProduct}
    alt="img"
  />
</a>
